<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Height Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height"
            app:suffixText="cm"
            app:startIconDrawable="@drawable/ic_height"
            style="@style/CustomTextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Weight Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Weight"
            app:startIconDrawable="@drawable/ic_weight"
            app:suffixText="kg"
            style="@style/CustomTextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Age Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Age"
            app:startIconDrawable="@drawable/ic_calendar"
            app:suffixText="years"
            style="@style/CustomTextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gender Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Gender"
            style="@style/CustomTextInputLayout">

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomSpinnerStyle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fitness Level Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Fitness Level"
            style="@style/CustomTextInputLayout">

            <Spinner
                android:id="@+id/spinnerFitnessLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomSpinnerStyle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fitness Goal Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Fitness Goal"
            style="@style/CustomTextInputLayout">

            <Spinner
                android:id="@+id/spinnerGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomSpinnerStyle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Workout Location Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Preferred Workout Location"
            style="@style/CustomTextInputLayout">

            <Spinner
                android:id="@+id/spinnerWorkoutLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomSpinnerStyle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Days Per Week Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Workout Days per Week (1-7)"
            style="@style/CustomTextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDaysPerWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>